<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#172D42" >

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:src="@drawable/mid_act_bar_btn"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/actionBarC"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/arrow_down"
            android:rotation="90"
            android:tint="@color/white"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/buttonCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:src="@drawable/check" />


    </RelativeLayout>



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/backround"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <EditText
                        android:id="@+id/ime"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_rounded_corners"
                        android:gravity="center"
                        android:textColor="@color/buttonsSettings"
                        android:hint="Name"
                        android:textColorHint="@color/placeholder"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/helvetica_neue"/>

                    <EditText
                        android:id="@+id/prezime"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/ime"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_rounded_corners"
                        android:gravity="center"
                        android:textColor="@color/buttonsSettings"
                        android:hint="Last Name"
                        android:textColorHint="@color/placeholder"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/helvetica_neue" />
                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/prezime"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/buttonsSettings"
                        android:background="@drawable/shape_rounded_corners"
                        android:gravity="center"
                        android:hint="Title"
                        android:textColorHint="@color/placeholder"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/helvetica_neue"/>

                    <EditText
                        android:id="@+id/eMail"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/title"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_rounded_corners"
                        android:gravity="center"
                        android:hint="E-mail"
                        android:textColorHint="@color/placeholder"
                        android:textColor="@color/buttonsSettings"
                        android:fontFamily="@font/helvetica_neue"/>

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/eMail"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_rounded_corners"
                        android:gravity="center"
                        android:textColorHint="@color/placeholder"
                        android:hint="Phone"
                        android:textColor="@color/buttonsSettings"
                        android:fontFamily="@font/helvetica_neue"/>

                    <FrameLayout
                        android:id="@+id/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="24dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/sl"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/allpicicon"
                            android:background="@drawable/shape_line"/>


                        <LinearLayout
                            android:id="@+id/slicicaItext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/slika"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:src="@drawable/foto" />


                        </LinearLayout>
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/card"
                        android:layout_alignEnd="@id/phone"
                        android:layout_alignTop="@+id/card"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imagex"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/x" />

                        <ImageView
                            android:id="@+id/imagerotateLeft"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/rotate_left" />

                        <ImageView
                            android:id="@+id/imagexRightt"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/rotate_right" />


                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/notificationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="NOTIFICATIONS"
                        android:textSize="13sp"
                        android:textColor="@color/placeholder"
                        android:textStyle="bold"
                        android:fontFamily="@font/helvetica_neue"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="25dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Push messages"
                            android:textColor="@color/headerText"
                            android:textSize="18sp"/>
                        <ToggleButton
                            android:id="@+id/chkState1"
                            android:layout_width="55dp"
                            android:layout_height="27.5dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/toggle_selector"
                            android:layout_gravity="right"
                            android:textOff=""
                            android:textOn=""/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/headerText"
                            android:textSize="18sp"/>
                        <ToggleButton
                            android:id="@+id/chkState2"
                            android:layout_width="55dp"
                            android:layout_height="27.5dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/toggle_selector"
                            android:layout_gravity="right"
                            android:textOff=""
                            android:textOn=""/>
                    </RelativeLayout>

                    <!--<android.support.v7.widget.SwitchCompat
                       android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text="Push messages"
                        android:textColor="@color/headerText"
                        android:textSize="18sp"
                        android:theme="@style/SwitchCompatTheme"
                        android:fontFamily="@font/helvetica_neue"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="Email"
                        android:textColor="@color/headerText"
                        android:textSize="18sp"
                        android:fontFamily="@font/helvetica_neue"/>-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/downLayoutOfNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:maxWidth="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text1ZaappSetings"
                            android:textColor="@color/headerText"
                            android:textSize="18sp"/>
                        <ToggleButton
                            android:id="@+id/chkState3"
                            android:layout_width="55dp"
                            android:layout_height="27.5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/toggle_selector"
                            android:textOff=""
                            android:textOn="" />
                    </RelativeLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginBottom="10dp">
                       <TextView
                           android:layout_width="wrap_content"
                           android:maxWidth="250dp"

                           android:layout_height="wrap_content"
                           android:text="@string/text2ZaappSetings"
                           android:textColor="@color/headerText"
                           android:textSize="18sp"/>
                       <ToggleButton
                           android:id="@+id/chkState4"
                           android:layout_width="55dp"
                           android:layout_height="27.5dp"
                           android:layout_centerVertical="true"
                           android:background="@drawable/toggle_selector"
                           android:layout_alignParentEnd="true"
                           android:textOff=""
                           android:textOn=""/>
                   </RelativeLayout>

                    <!--<android.support.v7.widget.SwitchCompat
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/headerText"
                        android:text="@string/text1ZaappSetings"
                        android:textSize="18sp"
                        android:fontFamily="@font/helvetica_neue"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/headerText"
                        android:text="@string/text2ZaappSetings"
                        android:textSize="18sp"
                        android:fontFamily="@font/helvetica_neue"/>-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutZaDugme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/logoutbutton"
                            android:layout_width="100dp"
                            android:layout_height="33dp"
                            android:text="Logout"
                            android:layout_marginEnd="7dp"
                            android:backgroundTint="@color/orange"
                            android:textSize="16sp"
                            android:background="@drawable/rounded_corners"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/helvetica_neue"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</LinearLayout>