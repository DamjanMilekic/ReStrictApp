<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Drawing"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/headerText"
            android:fontFamily="@font/helvetica_neue"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"
            android:background="@color/detail_fragment_background">

        </FrameLayout>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/shape_rounded_corners"
            android:padding="5dp"
            android:textColorHint="@color/placeholder"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/helvetica_neue"/>

        <EditText
            android:id="@+id/input_notes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Notes..."
            android:textColorHint="@color/placeholder"

            android:background="@drawable/shape_rounded_corners"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="textStart"
            android:gravity="top"
            tools:ignore="RtlCompat"
            android:fontFamily="@font/helvetica_neue" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"
            android:background="@color/detail_fragment_background">

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/share"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Share"
                android:layout_marginEnd="7dp"
                android:backgroundTint="@color/orange"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/helvetica_neue"/>

            <TextView
                android:id="@+id/cancel"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:layout_marginStart="7dp"
                android:gravity="center"
                android:textColor="@color/buttonLogout"
                android:background="@drawable/rounded_corners_with_orange_border"
                android:fontFamily="@font/helvetica_neue"/>





        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>