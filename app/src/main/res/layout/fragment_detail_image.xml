<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.laptop.restrict.Fragments.DetailImageFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

    <FrameLayout
        android:id="@+id/resize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lock"
        android:layout_marginTop="94dp">

        <ImageView
            android:id="@+id/imgResizeBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.6"
            android:src="@drawable/circle_selected" />

        <ImageView
            android:id="@+id/imgResizeFront"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/expand_tool" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_marginRight="15dp"
        android:layout_above="@+id/lock"
        android:layout_alignStart="@+id/resize">

        <ImageView
            android:id="@+id/imgEditBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.6"
            android:src="@drawable/circle_selected" />

        <ImageView
            android:id="@+id/imgEditFront"
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/edit" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/imgLockBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_selected"
            android:alpha="0.6"/>

        <ImageView
            android:id="@+id/imgLockFront"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/padunlock"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"/>

    </FrameLayout>

</RelativeLayout>
