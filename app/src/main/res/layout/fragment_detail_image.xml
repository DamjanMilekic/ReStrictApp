<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.laptop.restrict.Fragments.DetailImageFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"/>

    <FrameLayout
        android:id="@+id/resize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/imgResizeBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_selected"
            android:alpha="0.7"/>

        <ImageView
            android:id="@+id/imgResizeFront"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/expand_tool"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/imgLockBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_selected"
            android:alpha="0.7"/>

        <ImageView
            android:id="@+id/imgLockFront"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/padunlock"
            android:layout_gravity="center"/>

    </FrameLayout>

</RelativeLayout>
