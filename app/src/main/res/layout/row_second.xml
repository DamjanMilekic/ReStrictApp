<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extendedListBackground"
    android:padding="10dp"
    android:gravity="end"
    android:weightSum="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rowSecondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:paddingStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/secondLevelText"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/arrowChild"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@color/extendedListBackground"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow_blue" />

    <ImageView
        android:id="@+id/arrowChildExpanded"
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/down_arrow_blue"
        android:visibility="gone" />
</LinearLayout>