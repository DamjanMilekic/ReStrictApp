<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extendedListBackground"
    android:padding="10dp"
    android:gravity="right"
    android:weightSum="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rowSecondText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="34dp"
        android:textStyle="bold"
        android:textColor="@color/secondLevelText"
        android:textSize="21sp" />
    <ImageView
        android:id="@+id/arrowChild"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:background="@color/extendedListBackground"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow_blue" />

    <ImageView
        android:id="@+id/arrowChildExpanded"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"

        android:scaleType="fitXY"
        android:src="@drawable/down_arrow_blue"
        android:visibility="gone" />
</LinearLayout>